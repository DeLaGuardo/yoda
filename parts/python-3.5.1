USER root
RUN yum -y install gcc gcc-c++ make zlib zlib-devel \
  openssl openssl-devel postgresql-devel postgresql-contrib \
  git libxml2 libxml2-devel libxslt libxslt-devel && \
  yum -y clean all && \
  curl -sS https://www.python.org/ftp/python/3.5.1/Python-3.5.1.tgz > python.tgz && \
  gunzip python.tgz && tar xf python.tar && \
  cd Python-3.5.1 && ./configure --prefix=/usr && make -j4 && make install && ldconfig && cd .. && \
  rm -fr Python-3.5.1 && rm -f python.tar && \
  curl -sS https://bootstrap.pypa.io/get-pip.py > get-pip.py && \
  python3 get-pip.py && \
  rm -f get-pip.py

