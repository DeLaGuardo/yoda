RUN yum -y install gcc gcc-c++ automake autoconf make libxml2 libxml2-devel\
  mysql-devel libcurl-devel gd-devel libicu-devel && \
  yum -y clean all && \
  curl -sS http://nl1.php.net/distributions/php-7.0.6.tar.gz | tar -xzf - && \
  cd php-7.0.6 && ./configure --disable-all --prefix=/usr --sysconfdir=/etc\
    --localstatedir=/var --enable-mbstring\
    --enable-cli --with-layout=GNU\
    --enable-sockets --with-libxml-dir=/usr --with-kerberos=/usr\
    --with-mhash=yes --with-gd=shared,/usr --enable-gd-native-ttf\
    --with-jpeg-dir=shared,/usr\
    --with-png-dir=shared,/usr --with-freetype-dir=shared,/usr\
    --enable-intl=shared --enable-embedded-mysqli\
    --enable-mysqlnd --enable-session --enable-filter --with-curl\
    --enable-opcache --enable-maintainer-zts\
    --enable-json --with-config-file-path=/home/box/php/php.ini\
    --with-config-file-scan-dir=/home/box/php/mod\
    --with-mysqli --enable-embedded-mysqli\
    --enable-xml --enable-libxml --with-pear\
    --enable-fileinfo --with-gd --enable-gd-native-ttf\
    --enable-fpm && make -j4 && \
  make install && ldconfig && cd .. && \
  rm -fr php-7.0.6
