USER root
RUN yum -y install epel-release && \
  yum -y install gcc gcc-c++ glibc-devel make ncurses-devel openssl-devel \
  autoconf java-1.8.0-openjdk-devel wxBase.x86_64 \
  wxGTK wxGTK-gl unixODBC git && \
  yum -y clean all && \
  curl -LSs https://packages.erlang-solutions.com/erlang/esl-erlang/FLAVOUR_1_general/esl-erlang_18.3-1~centos~7_amd64.rpm > erlang.rpm && \
  rpm -Uvh erlang.rpm && rm -f $_ && \
  mkdir -p /opt && \
  curl -LSs https://github.com/elixir-lang/elixir/archive/v1.2.6.tar.gz | tar -xzf - -C /opt && \
  cd /opt/elixir-1.2.6 && make clean test

USER box
ENV PATH "$PATH:/opt/elixir-1.2.6/bin"
